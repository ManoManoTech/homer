{
  "name": "homer",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/src/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.build.json",
    "dev": "concurrently --kill-others 'yarn build -w' 'wait-on dist/src/index.js && nodemon --watch dist dist/src/index.js'",
    "lint": "eslint .",
    "pre-commit": "exec-staged",
    "prepare": "husky",
    "start": "node dist/src/index.js",
    "start-env": "node --env-file=.env dist/src/index.js",
    "test": "jest --runInBand --forceExit"
  },
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@slack/web-api": "7.11.0",
    "ajv": "^8.17.1",
    "dayjs": "1.11.18",
    "dd-trace": "5.68.0",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "helmet": "8.1.0",
    "pg": "8.16.3",
    "pg-hstore": "2.3.4",
    "pino": "9.13.0",
    "sequelize": "6.37.7",
    "slackify-markdown": "4.5.0",
    "source-map-support": "0.5.21",
    "tsconfig-paths": "4.2.0"
  },
  "devDependencies": {
    "@josselinbuils/exec-staged": "1.0.2",
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/node": "24.7.1",
    "@types/pg": "8.15.5",
    "@types/supertest": "^6.0.3",
    "concurrently": "9.2.1",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "2.32.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "nodemon": "3.1.10",
    "pino-pretty": "13.1.1",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "29.4.4",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.45.0",
    "wait-on": "9.0.1"
  }
}
