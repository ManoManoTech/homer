{
  "name": "homer",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/src/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.build.json",
    "dev": "concurrently --kill-others 'yarn build -w' 'wait-on dist/src/index.js && nodemon --watch dist dist/src/index.js'",
    "lint": "eslint .",
    "pre-commit": "exec-staged",
    "prepare": "husky install",
    "start": "node dist/src/index.js",
    "start-env": "node --env-file=.env dist/src/index.js",
    "test": "jest --runInBand --forceExit"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@slack/web-api": "6.8.1",
    "ajv": "^8.17.1",
    "dayjs": "1.11.13",
    "dd-trace": "3.13.2",
    "dotenv": "16.0.3",
    "express": "4.21.1",
    "helmet": "6.0.1",
    "node-fetch": "2.6.9",
    "pg": "8.9.0",
    "pg-hstore": "2.3.4",
    "pino": "8.10.0",
    "sequelize": "6.28.0",
    "slackify-markdown": "4.3.1",
    "source-map-support": "0.5.21",
    "tsconfig-paths": "4.1.2"
  },
  "devDependencies": {
    "@josselinbuils/exec-staged": "1.0.2",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.14",
    "@types/node": "18.13.0",
    "@types/node-fetch": "2.6.2",
    "@types/pg": "8.6.6",
    "@types/signale": "1.4.4",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.51.0",
    "concurrently": "9.2.1",
    "eslint": "8.33.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "nodemon": "3.1.7",
    "pino-pretty": "11.3.0",
    "prettier": "2.8.4",
    "rimraf": "6.0.1",
    "ts-jest": "29.2.5",
    "typescript": "5.6.3",
    "wait-on": "7.0.1"
  }
}
